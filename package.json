{
  "name": "gps-demo",
  "version": "1.0.0",
  "description": "Real-time GPS trajectory smoothing with dspx and Kalman filtering",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:position\" \"npm run dev:velocity-calc\" \"npm run dev:velocity-smooth\" \"npm run dev:sse\" \"npm run dev:client\"",
    "dev:monolith": "concurrently \"npm run dev:worker\" \"npm run dev:sse\" \"npm run dev:client\"",
    "dev:worker": "tsx watch worker/gps-worker.ts",
    "dev:position": "tsx watch worker/position-smoother.ts",
    "dev:velocity-calc": "tsx watch worker/velocity-calculator.ts",
    "dev:velocity-smooth": "tsx watch worker/velocity-smoother.ts",
    "dev:sse": "tsx watch client/sse-server.ts",
    "dev:client": "vite",
    "replay": "tsx data/replay.ts",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "dspx": "^1.4.0",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "leaflet": "^1.9.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^22.0.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.8"
  }
}
